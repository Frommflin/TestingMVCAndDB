@model Demo.Models.Employee

@{
    ViewData["Title"] = "Edit";
    string role;
    decimal salary = Model.Salary;
}
@if (Model.IsCEO == true)
{
    role = "CEO";
}
else if (Model.IsManager == true)
{
    role = "Manager";
}
else
{
    role = "Employee";
}

<h1>Edit Employee</h1>

<hr />
<div class="row" onload="alert('loaded edit page')">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Role </label>
                <div id="editRadioDiv">
                    <div>
                        @if(role == "Employee")
                        {
                            <input type="radio" id="EditEmployee" name="editRole" value="Employee" onchange="AdjustEditForm(this)" checked />
                        }
                        else
                        {
                            <input type="radio" id="EditEmployee" name="editRole" value="Employee" onchange="AdjustEditForm(this)" />
                        }
                        Employee (rank 1-5)
                    </div>
                    <div>
                        @if (role == "Manager")
                        {
                            <input type="radio" id="EditManager" name="editRole" value="Manager" onchange="AdjustEditForm(this)" checked/>
                        }
                        else
                        {
                            <input type="radio" id="EditManager" name="editRole" value="Manager" onchange="AdjustEditForm(this)" />
                        }
                         Manager (rank 6-9)
                    </div>
                    <div>
                        @if (ViewBag.CEOExists == true)
                        {
                            <input type="radio" name="editRole" value="CEO" disabled />
                        }
                        else
                        {
                            @if (role == "CEO")
                            {
                                <input type="radio" id="EditCEO" name="editRole" value="CEO" onchange="AdjustEditForm(this)" checked />
                            }
                            else
                            {
                                <input type="radio" id="EditCEO" name="editRole" value="CEO" onchange="AdjustEditForm(this)" />
                            }
                        }
                        CEO (rank 10)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>Current rank: (Current rank here)</div> @* Fix this to dynamic value *@
                <label class="control-label">New rank</label>
                <div id="rankDiv">
                    <input type="number" name="rank" min="1" max="5" value="1" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <div>
                    <select id="employeeSelect" asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers">
                        <option selected disabled>Select a manager</option>
                    </select>
                    <select id="managerSelect" asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagersAndCEO" style="display:none;">
                        <option selected disabled>Select a manager</option>
                        <option>No Manager</option>
                    </select>
                    <select id="ceoSelect" asp-for="ManagerId" class="form-control" style="display:none;" disabled>
                        <option>No manager</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
